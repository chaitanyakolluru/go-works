    "host": "localhost:8080",
    "paths": {
        "/record": {
            "post": {
                "description": "create a record within the json file",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "create record",
                "parameters": [
                    {
                        "description": "record to be created",
                        "name": "record",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/jsonFile.Record"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "created record",
                        "schema": {
                            "type": "body"
                        }
                    },
                    "400": {
                        "description": "failure message saying resource already exists",
                        "schema": {
                            "type": "header"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "jsonFile.Record": {
            "type": "object",
            "properties": {
                "age": {
                    "type": "integer"
                },
                "designation": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "location": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "todos": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
